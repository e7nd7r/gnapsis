# Gnapsis Docker Environment Variables
# Copy to .env and customize

# Neo4j password (required)
NEO4J_PASSWORD=your-secure-password

# API key for authentication (optional, for simple Bearer token auth)
GNAPSIS_API_KEY=your-api-key

# OAuth 2.0 configuration (for Claude mobile/web connectors via WorkOS)
# Get these from your WorkOS dashboard
OAUTH_AUTHORIZATION_SERVER=https://api.workos.com/mcp
RESOURCE_URL=https://your-tailscale-url.ts.net

# Project/vault path to mount (absolute path)
PROJECT_PATH=/path/to/your/project
PROJECT_NAME=my-project
